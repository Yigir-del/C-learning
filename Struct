#include <stdio.h>
  struct student
  {
    char isim[15];
    char soyisim[15];
    int numara;
    int yas;
  };
  
int main(){
    struct student ahmet = {"Ahmet","Ihsan",135,20};
    printf("%s %s %d %d",ahmet.isim,ahmet.soyisim,ahmet.numara,ahmet.yas);
 return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

#include <stdio.h>

// Araba yapısı tanımlanıyor
struct Araba {
    int tekerleksayisi;
    int vitessayisi;
    int model;
    float motor;
    int beygir;
};

int main() {
    // araba1 değişkeni başlatılıyor
    struct Araba araba1 = {4, 6, 2011, 3.0, 300};
    struct Araba araba2;

    // araba2, araba1'e eşitleniyor
    araba2 = araba1;

    // araba2'nin değerleri yazdırılıyor
    printf("%d %d %d %.2f %d\n", araba2.tekerleksayisi, araba2.vitessayisi, araba2.model, araba2.motor, araba2.beygir);

    return 0;
}
