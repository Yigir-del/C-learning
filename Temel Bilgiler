#include <stdio.h>

int main() {
    int a, b, c, d, e;
    float ort;
    
    printf("5 tane sayi giriniz (virgül kullanmadan, boşluklarla ayırarak):\n");
    scanf("%d %d %d %d %d", &a, &b, &c, &d, &e);
    
    ort = (a + b + c + d + e) / 5.0; // 5 yerine 5.0 kullanarak doğru hesaplama yapıyoruz
    printf("Girilen sayilarin ortalamasi: %f\n", ort);
    
    return 0;
}

