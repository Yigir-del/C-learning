#include <stdio.h>

int main(){
	
	
	printf("%.1f\n",9.5+12.2);
	printf("%d\n",9-12);
	printf("%d\n",9*12);
	printf("%.2f\n",9.0/12.0);
	printf("%d\n",9%12);

	
	return 0;
}

#include <stdio.h>

int main(){
	
	//TİP DÖNÜŞÜMLERİ
	/*
	 OTOMATİK DÖNÜŞÜM ÇİZELGESİ
	 char
	 short -------> int ----------> float ---------> double ----------> long double
	 mesela int le  double beraberse herkes  doubleye çevirilir otomatik olarak
	 
	 MANUEL DÖNÜŞÜMLER
	 3.2 sayısını int yapmak istersek  (int) 3.2 -------> 3 sonucunu verir
	*/
	
	int x = 3;
	float y = 0.1;
	printf("%f\n",x/y);
	
	printf("%.2f\n",2*4.2 + 4%2);
	printf("%d\n",(int)3.2);
	printf("%.1f\n",(float)3);
	
	
	
	
	return 0;
}
