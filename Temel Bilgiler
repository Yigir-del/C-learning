#include <stdio.h>
#define PI 3.14
int main(){
	
	float yaricap;
	float hacim;
	
	printf("Yaricaap Belirleyiniz:");
	scanf("%f",&yaricap);
	
	hacim =(4/3.0)*PI*(yaricap*yaricap*yaricap);
	printf("Kurenin hacmi %f 'dir.'",hacim);
	
	return 0;
}

