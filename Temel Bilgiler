#include <stdio.h>
#include <math.h>
int main() {
    
    int a,b,c;
    float x1,x2;
    float delta;
    printf("Denklemdeki a,b ve c yi giriniz: \n");
    scanf("%d %d %d",&a,&b,&c);
    
    delta = b*b - 4*a*c;
    x1 = (-b + (sqrt(delta))) / 2*a;
    x2 = (-b - (sqrt(delta))) / 2*a;
    
    printf("kok 1: %f \t kok 2: %f",x1,x2);
    
    return 0;
}
