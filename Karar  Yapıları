#include <stdio.h>

int main(){
	
	int islem,bakiye = 1000,tutar;
	printf("Islemler\n1 Bakiye Sorma\n2 Para cekme\n3 Para Yatirma\n4 Havale Yapma\n\n\n");
	scanf("%d",&islem);
	
	
	switch(islem){
		
		case 1:
		 printf("%d",bakiye); 
		        break;
		case 2:
		printf("Bakiyeniz: %d\n",bakiye);
		printf("Cekilecek tutari giriniz:\n");
		scanf("%d",&tutar);
		               
		     if (tutar > bakiye){
		        printf("bakiye yetersiz");
		        break;
		    }
		bakiye -= tutar;
		               printf("Yeni bakiye: %d",bakiye);
		        break;
		case 3:
		printf("Yatirilacak tutari giriniz:\n");
		scanf("%d",&tutar);
		
		bakiye += tutar;
	                   printf ("Yeni bakiye: %d",bakiye);
		        break;
		case 4: 
		printf("Bir sorundan oturu havale işleminizi gerçeklestiremiyoruz");
		        break;
		default:
		printf("bilinmeyen islem");
				
	}
	
	
	
	
	return 0;
}

